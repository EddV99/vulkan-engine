cd build;

fn build_shaders() {
    cd ../src/shaders;

    glslc basic.vert -o vert.spv;
    glslc basic.frag -o frag.spv;

    cd ../../build;
}

fn build (){
    echo "building!";
    cmake .;
    make -j4;

    build_shaders();
}

run (){
    echo "running!";
    ./vulkan-engine;
}

build();
run();
